{
  "required_api_version": "^2.0.0",
  "name": "Streamlink Twitch",
  "description": "Easily open Twitch streams with Streamlink",
  "developer_name": "pixelat3d",
  "icon": "images/icon.png",
  "options": {
    "query_debounce": 0.05
  },
  "preferences": [
    {
      "id": "twitch_keyword",
      "type": "keyword",
      "name": "Watch on Twitch",
      "default_value": "tw"
    },
    {
      "id": "streamlink_path",
      "type": "input",
      "name": "Streamlink Path",
      "description": "Path to streamlink binary",
      "default_value": "streamlink"
    },
    {
      "id": "video_player",
      "type": "text",
      "name": "Player",
      "description": "Video Player to Launch",
      "default_value": "mpv"
    },
    {
      "id": "stream_quality",
      "type": "select",
      "name": "Video Quality",
      "description": "Select video quality",
      "options": ["best", "1080p60", "720p60", "480p", "360p", "worst", "audio_only"],
      "default_value": "best"
    }
  ]
}
